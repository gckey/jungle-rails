<section class="dashboard-show">

  <header class="page-header">
    <h1>My Dashboard</h1>
  </header>

  <table class="table table-bordered">
      <thead>
        <tr>
          <th>Total Number of Products</th>
          <th>Total Number of Categories</th>
        </tr>
      </thead>
      <tbody>
        <td>
          <%= @num_of_products %>
        </td>
        <td>
          <%= @num_of_categories %>
        </td>
      </tbody>
    </table>

  <div class="btn">
    <%= link_to "Admin Products List", admin_products_path, class: "btn btn-outline-primary btn-lg" %>

    <%= link_to "Home Page", root_path, class: "btn btn-outline-primary btn-lg" %>
  </div>
</section>